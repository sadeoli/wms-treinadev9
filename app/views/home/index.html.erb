<section id="warehouses">

    <h2>Galpões</h2>
    <% if @warehouses.any? %>
        <% @warehouses.each do |w| %>
            <div>
                <h3><%= link_to w.name, w %></h3>
                <dl>
                    <dt> Código: </dt>
                    <dd> <%= w.code %> </dd>
                    <dt> Cidade: </dt>
                    <dd> <%= w.city %> </dd>
                    <dt> Área: </dt>
                    <dd> <%= w.area %> m2 </dd>
                </dl>
            </div>
        <% end %>

    <% else %>
        <p>Não existem galpões cadastrados.</p>
    <%end%>

</section>